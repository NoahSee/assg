{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"outDir": "./build",
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["jest"]
	},
	"include": ["**/*.ts", "*.ts", "src/index.ts", "*.js"],
	"files": ["src/index.ts"],
	"exclude": ["node_modules"]
}
